{
  "name": "@nexusd/client",
  "version": "1.0.0",
  "description": "Node.js/TypeScript client library for NexusD pub/sub sidecar daemon",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "proto:generate": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./src/generated --grpc_out=grpc_js:./src/generated --ts_out=grpc_js:./src/generated -I ../../proto ../../proto/sidecar.proto",
    "build": "tsc",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "example:publish": "ts-node examples/publish.ts",
    "example:subscribe": "ts-node examples/subscribe.ts"
  },
  "keywords": [
    "pubsub",
    "grpc",
    "nexusd",
    "messaging",
    "typescript"
  ],
  "author": "NexusD Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nexusd/nexusd"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.10",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "grpc-tools": "^1.12.4",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "src"
  ]
}
